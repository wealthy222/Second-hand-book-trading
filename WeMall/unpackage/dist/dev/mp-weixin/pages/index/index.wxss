@font-face {
  font-family: "HMfont-home";
  src: url("data:application/x-font-woff2;charset=utf-8;base64,") format("woff2");
}
.icon {
  font-family: "HMfont-home" !important;
  font-size: 60rpx;
  font-style: normal;
  color: #ffffff;
}
.icon.scan:before {
  content: "\e69a";
}
.icon.menu:before {
  content: "\e62b";
}
.icon.search:before {
  content: "\e628";
}
page {
  background-color: #fff;
}
.status {
  width: 100%;
  height: 0;
  background-color: #ff570a;
  position: fixed;
  top: 0;
  z-index: 999;
}
.header {
  width: 100%;
  height: 100rpx;
  background-color: #ff570a;
  display: flex;
  position: fixed;
  top: 0;
  z-index: 996;
}
.header .scan {
  width: 100rpx;
  height: 100rpx;
  flex-shrink: 1;
  display: flex;
  justify-content: center;
  align-items: center;
}
.header .input {
  width: calc(100% - 200rpx);
  display: flex;
  justify-content: center;
  align-items: center;
  position: relative;
}
.header .input input {
  width: calc(100% - 60rpx);
  height: 60rpx;
  background-color: #ffffff;
  border-radius: 60rpx;
  padding-left: 60rpx;
  font-size: 30rpx;
}
.header .input .icon {
  width: 60rpx;
  height: 60rpx;
  position: absolute;
  color: #a18090;
  z-index: 996;
  top: 20rpx;
  left: 0;
  font-size: 40rpx;
  display: flex;
  justify-content: center;
  align-items: center;
}
.header .menu {
  width: 100rpx;
  height: 100rpx;
  flex-shrink: 1;
  display: flex;
  justify-content: center;
  align-items: center;
}
.header .menu image {
  width: 60rpx;
  height: 60rpx;
  border-radius: 60rpx;
}
.place {
  background-color: #ff570a;
  height: 100rpx;
}
.swiper-view .swiper {
  width: 100%;
  height: 280rpx;
}
.swiper-view .swiper image {
  width: 100%;
  height: 280rpx;
}
.swiper-view .keep-out {
  width: 100%;
  height: 30rpx;
  border-radius: 100% 100% 0 0;
  background-color: #ff570a;
  margin-top: -15rpx;
  position: absolute;
}
.category {
  width: 95%;
  padding: 2.5vw 2.5vw;
  background-color: #ff570a;
}
.category .box {
  width: 100%;
  border-radius: 20rpx;
  background-color: #ffffff;
}
.category .box .dots {
  display: flex;
  justify-content: center;
  height: 15rpx;
  width: 100%;
}
.category .box .dots view {
  width: 30rpx;
  height: 5rpx;
  background-color: rgba(0, 0, 0, 0.2);
}
.category .box .dots view.active {
  background-color: #ff570a;
}
.category .box .swiper {
  width: 100%;
  padding: 20rpx 0;
}
.category .box .swiper .uni-swiper-dot {
  width: 20rpx;
}
.category .box .swiper .category-list {
  width: 100%;
  height: auto;
  display: flex;
  justify-content: flex-start;
  padding: 10rpx 0;
  flex-flow: wrap;
}
.category .box .swiper .category-list .icon {
  width: 20%;
  display: flex;
  flex-flow: wrap;
  justify-content: center;
  font-size: 22rpx;
  color: #666;
}
.category .box .swiper .category-list .icon image {
  width: 75rpx;
  height: 100rpx;
}
.category .box .swiper .category-list .icon view {
  width: 100%;
  display: flex;
  justify-content: center;
}
.pick {
  width: 95%;
  padding: 0 2.5vw 2.5vw 2.5vw;
  background: linear-gradient(to bottom, #ff570a 0%, #ffffff 105%);
}
.pick .box {
  width: 100%;
  border-radius: 20rpx;
  background-color: #ffffff;
}
.pick .box .title {
  display: flex;
  justify-content: flex-start;
  align-items: flex-end;
  height: 60rpx;
  border-bottom: solid 1rpx #eee;
  padding-bottom: 10rpx;
}
.pick .box .title .big {
  font-size: 34rpx;
  padding-left: 20rpx;
  color: #46434f;
}
.pick .box .title .small {
  font-size: 24rpx;
  padding-left: 20rpx;
  color: #827f8b;
}
.pick .box .product-list {
  padding: 15rpx 20rpx 15rpx 20rpx;
  -webkit-column-count: 2;
          column-count: 2;
  -webkit-column-width: 50%;
          column-width: 50%;
  -webkit-column-gap: 10rpx;
          column-gap: 10rpx;
}
.pick .box .product-list > view {
  display: flex;
  background-color: #f8f8f8;
  position: relative;
}
.pick .box .product-list > view:nth-child(1) .price {
  color: #e65339;
  font-size: 30rpx;
  position: absolute;
  bottom: 8rpx;
  left: 8rpx;
}
.pick .box .product-list > view:nth-child(1) .slogan {
  color: #807c87;
  font-size: 30rpx;
  position: absolute;
  bottom: 8rpx;
  right: 8rpx;
}
.pick .box .product-list > view:nth-child(1) image {
  width: 100%;
  height: 0;
}
.pick .box .product-list > view:nth-child(2) image, .pick .box .product-list > view:nth-child(3) image {
  width: calc(50% - 5rpx);
  height: 0;
}
.pick .box .product-list > view:nth-child(2) .price, .pick .box .product-list > view:nth-child(3) .price {
  position: absolute;
  top: 25%;
  left: 55%;
  color: #e65339;
  font-size: 30rpx;
}
.pick .box .product-list > view:nth-child(2) .slogan, .pick .box .product-list > view:nth-child(3) .slogan {
  position: absolute;
  top: 60%;
  left: 55%;
  color: #807c87;
  font-size: 20rpx;
}
.pick .box .product-list > view:nth-child(2) {
  margin-bottom: 10rpx;
}
.banner image {
  width: 100%;
}
.goods-list {
  background-color: #f4f4f4;
}
.goods-list .title {
  width: 100%;
  display: flex;
  justify-content: center;
  align-items: center;
  height: 60rpx;
  color: #979797;
  font-size: 24rpx;
}
.goods-list .loading-text {
  width: 100%;
  display: flex;
  justify-content: center;
  align-items: center;
  height: 60rpx;
  color: #979797;
  font-size: 24rpx;
}
.goods-list .product-list {
  width: 95%;
  padding: 0 2.5% 2.5vw 2.5%;
  display: flex;
  justify-content: space-between;
  flex-wrap: wrap;
}
.goods-list .product-list .product {
  width: 48.75%;
  border-radius: 20rpx;
  background-color: #fff;
  margin: 0 0 15rpx 0;
}
.goods-list .product-list .product image {
  width: 100%;
  border-radius: 20rpx 20rpx 0 0;
}
.goods-list .product-list .product .name {
  width: 92%;
  padding: 10rpx 4%;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  text-align: justify;
  overflow: hidden;
  font-size: 30rpx;
}
.goods-list .product-list .product .info {
  display: flex;
  justify-content: space-between;
  align-items: flex-end;
  width: 92%;
  padding: 10rpx 4% 10rpx 4%;
}
.goods-list .product-list .product .info .price {
  color: #e65339;
  font-size: 30rpx;
  font-weight: 600;
}
.goods-list .product-list .product .info .slogan {
  color: #807c87;
  font-size: 24rpx;
}

