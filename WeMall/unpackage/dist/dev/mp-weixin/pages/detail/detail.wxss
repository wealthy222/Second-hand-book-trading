.profileInfo {
  flex: 4;
  justify-content: center;
  align-items: center;
}
.bottom {
  margin-top: 25%;
}
.bottom image {
  width: 70%;
  height: 500rpx;
  margin-left: 15%;
  margin-top: 5%;
}
.bottom .author {
  margin-top: 14rpx;
}
.bottom .author text:nth-child(1) {
  font-size: 13px;
  color: #ffffff;
  background-color: #ff0000;
}
.bottom .author text:nth-child(2) {
  font-size: 15px;
  font-weight: 700;
  background-color: #FFFFFF;
  color: #000000;
  margin-left: 10rpx;
}
.bottom .info {
  margin: 0 3%;
}
.bottom .info .name {
  font-size: 13px;
}
.bottom .info .name text:nth-child(1) {
  color: #ffffff;
  background-color: #ff0000;
}
.bottom .info .name text:nth-child(2) {
  font-size: 14px;
  font-weight: 700;
  background-color: #FFFFFF;
  color: #000000;
}
.bottom .info .bookInfo {
  margin-top: 10rpx;
  display: flex;
}
.bottom .info .bookInfo .isbn {
  flex: 1;
}
.bottom .info .bookInfo .isbn text:nth-child(1) {
  font-size: 13px;
}
.bottom .info .bookInfo .isbn text:nth-child(2) {
  font-size: 15px;
  font-weight: 700;
}
.bottom .info .bookInfo .price {
  flex: 1;
}
.bottom .info .bookInfo .price text:nth-child(1) {
  font-size: 13px;
}
.bottom .info .bookInfo .price text:nth-child(2) {
  font-size: 15px;
  font-weight: 700;
  color: #ff0000;
}
.fixBottom {
  display: flex;
  height: 120rpx;
  position: fixed;
  background-color: #ece9eb;
  bottom: 0;
  left: 0;
  width: 100%;
}
.fixBottom .left {
  font-size: 12px;
  flex: 2;
  display: flex;
  justify-content: center;
  align-items: center;
}
.fixBottom .left image {
  width: 40rpx;
  height: 40rpx;
}
.fixBottom .left .left_first {
  flex: 1;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}
.fixBottom .left .left_second {
  flex: 1;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}
.fixBottom .left .left_third {
  flex: 1;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}
.fixBottom .left .left_third text {
  margin-top: 2px;
}
.fixBottom .right {
  flex: 2;
  display: flex;
  justify-content: center;
  align-items: center;
}
.fixBottom .right .right_first {
  flex: 1;
  flex-direction: column;
  display: flex;
  justify-content: center;
  align-items: center;
}
.fixBottom .right .right_first view {
  background-image: linear-gradient(to right, #ebee09, #ee745b);
  display: flex;
  justify-content: center;
  flex-direction: column;
  align-items: center;
  width: 100%;
  height: 80rpx;
  color: #FFFFFF;
  border-radius: 40rpx 0 0 40rpx;
}
.fixBottom .right .right_second {
  flex: 1;
  flex-direction: column;
  display: flex;
  justify-content: center;
  align-items: center;
  width: 100%;
  height: 80rpx;
  color: #FFFFFF;
  background-image: linear-gradient(to right, #ee745b, #ee3507);
  border-radius: 0 40rpx 40rpx 0;
}

